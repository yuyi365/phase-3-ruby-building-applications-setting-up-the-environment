#!/usr/bin/env ruby 
## bin/run --> starting point of the app
## environment.rb --> file loads any required application files and handles configurations everytime the app starts

require '../config/environment'

lawn = Garden.new(name: 'Front Lawn')

basil = Plant.new(name: 'Basil')
basil.garden = lawn

cucumber = Plant.new(name: 'Cucumber')
cucumber.garden = lawn

p lawn.plants